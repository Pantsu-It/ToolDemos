<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="#ffffff">

        <com.example.chen.tooldemos.tools2.tools2.AudioView
            android:id="@+id/audioView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="lala"
            android:id="@+id/tv_title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="lala"
            android:gravity="center_horizontal|fill_vertical"
            android:textSize="20px"/>

        <SeekBar
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/sb_musicbar"
            android:indeterminate="false"
           />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="lala"
            android:gravity="center_horizontal|fill_vertical"
            android:textSize="20px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_mode"
            android:background="@drawable/repeat_btn_pressed"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_previous"
            android:background="@drawable/previous_btn"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_play"
            android:background="@drawable/pause_btn_pressed"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/btn_next"
            android:background="@drawable/next_btn"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.chen.tooldemos.tools2.tools2.music.MusicListViewContainer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/container"/>

    </HorizontalScrollView>

</LinearLayout>